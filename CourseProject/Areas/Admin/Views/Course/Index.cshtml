@model List<Course>



<div class="page-content">
    <div class="page-content-inner">


        <nav id="breadcrumbs" class="mb-3">
            <ul>
                <li><a href="#"> <i class="uil-home-alt"></i> </a></li>
                <li> Courses </li>

            </ul>
        </nav>

        <div class="d-flex justify-content-between mb-3">
            <h3> Courses </h3>

            <div>
                <a asp-action="SaveNew" class="btn btn-default">
                    <i class="uil-plus"> </i> New course
                </a>
            </div>
        </div>

        <div class="uk-child-width-1-3@m" uk-grid
             uk-scrollspy="cls: uk-animation-slide-bottom-small; target: > div ; delay: 200">
            @foreach (var item in Model)
            {

                <div>
                    <a asp-area="Admin" asp-controller="Course" asp-action="Edit" asp-route-id="@item.Id">
                        <div class="card animate-this uk-inline-clip">
                            <img src="@item.img" alt="">
                            <div class="card-body text-center pb-3">
                                <h6 class=" mb-0"> @item.title </h6>
                            </div>
                            <div class="card-footer py-0 border-top-0">
                                <div class="row align-items-center text-center">
                                    <div class="col-6 py-3">
                                        <a href="#" class="text-muted"> @item.price$ Sales </a>
                                    </div>
                                    <div class="col-6 py-3">
                                        <a href="#" class="text-muted"> @item.studentsEnrolled Enrolled </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>


        <ul class="uk-pagination my-5 uk-flex-center" uk-margin>
            <li class="uk-active"><span>1</span></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li class="uk-disabled"><span>...</span></li>
            <li><a href="#"><span uk-pagination-next></span></a></li>
        </ul>
    </div>
</div>
